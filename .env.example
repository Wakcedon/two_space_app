### Appwrite (legacy) - keep for compatibility during migration
APPWRITE_ENDPOINT=
APPWRITE_PROJECT_ID=
APPWRITE_API_KEY=
APPWRITE_DATABASE_ID=
APPWRITE_CHATS_COLLECTION_ID=
APPWRITE_MESSAGES_COLLECTION_ID=
APPWRITE_USER_HANDLES_COLLECTION_ID=

### Matrix configuration (новое, предпочтительно)
# Set to true to enable Matrix integration in the app (если true, Appwrite вызовы будут маршрутизированы через Matrix-фасад)
MATRIX_ENABLE=true
# Полный URL до вашего homeserver (обязательно с https://), пример:
# MATRIX_HOMESERVER_URL=https://matrix.example.org
MATRIX_HOMESERVER_URL=
# Имя сервера (server name), обычно совпадает с доменом: matrix.example.org
MATRIX_SERVER_NAME=
# ACCESS TOKEN для PoC: long-lived token админ/сервисного аккаунта.
# В REMOTE/PROD не храните админ-токен в клиенте. Лучше реализовать per-user login.
MATRIX_ACCESS_TOKEN=

# OAuth / SSO (опционально)
# Используется если вы настраиваете OAuth-провайдер на homeserver для SSO
MATRIX_OAUTH_CLIENT_ID=
MATRIX_OAUTH_CLIENT_SECRET=

# Включить E2EE по умолчанию для приватных комнат (true/false)
MATRIX_E2EE_ENABLED=true

# Jitsi для видеозвонков (можно оставить пустым для использования meet.jit.si)
JITSI_SERVER_URL=https://meet.jit.si

### Push / Notifications (планы)
# FCM и APNs настройки будут добавлены при реализации push
# FCM_SERVER_KEY=
# APNS_KEY_ID=
# APNS_TEAM_ID=

### Developer toggles
ENABLE_DEV_TOOLS=false

# Инструкция: скопируйте этот файл в .env и заполните значения. Никогда не коммитьте .env в VCS.

# Примеры значений (удалите/замените перед продом):
APPWRITE_ENDPOINT=http://server.ip.address/v1
APPWRITE_PROJECT_ID=twospace-app
APPWRITE_API_KEY=your_api_key_here
APPWRITE_DATABASE_ID=database_id

# Пример Matrix заполнения:
# MATRIX_ENABLE=true
# MATRIX_HOMESERVER_URL=https://matrix.example.org
# MATRIX_SERVER_NAME=matrix.example.org
# MATRIX_ACCESS_TOKEN=eyJhbGciOiJ... (пример, НЕ КОПИРУЙТЕ в публичные репозитории)

# Рекомендации:
# - Для PoC можно использовать MATRIX_ACCESS_TOKEN от админ/сервисного аккаунта.
# - Для production реализуйте per-user authentication (AuthService.login -> получает access_token для каждого пользователя) и храните токены в secure storage.
